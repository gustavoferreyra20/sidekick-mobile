{
  "expo": {
    "name": "sidekick-mobile",
    "slug": "sidekick-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/img/icons/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/img/icons/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#020202"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Se necesita acceso a la c√°mara para tomar fotos de perfil"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/img/icons/adaptative-icon.png",
        "backgroundColor": "#020202"
      },
      "package": "com.gustavof24.sidekickmobile",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "84eb00f8-c10c-416a-8799-b40d5b1ac0fe"
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-font"
    ],
    "owner": "gustavof24"
  }
}
